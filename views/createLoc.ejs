<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- BOOTSTRAP -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <!-- /BOOTSTRAP -->

</head>

<body>

<!-- NAVBAR -->
<% include ./_navbar.ejs %>

<div id="uniForm" class="container.fluid">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">

            <h2>Create University Profile</h2>

            <!-- BEGIN FORM -->
            <form method="POST" action="/createUni">

                <div class="form-group">
                    <label for="uniName">University Name: </label>
                    <input type="text" class="form-control" id="uniName" name="uniName">
                </div>

                <div class="form-group">
                    <label for="uniLocation">Location: </label>
                    <input type="text" class="form-control" id="uniLocation" name="uniLocation">
                </div>

                <div class="form-group">
                    <label for="uniDesc">University Description: </label>
                    <input type="text" class="form-control" id="uniDesc" name="uniDesc">
                </div>

                <div class="form-group">
                    <label for="uniStudents">Number of Students: </label>
                    <input type="number" class="form-control" id="uniStudents" name="uniStudents">
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            <!-- END FORM -->

        </div>
        <div class="col-md-2"></div>
</div>


</body>
