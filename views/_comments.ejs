<link rel="stylesheet" type="text/css" href="stylesheets/eventList.css" />

<!-- BEGIN MODAL -->
<div class="modal fade" id="comment<%= eventId %>" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
    
                <!-- MODAL HEADER -->
                <div class="modal-header">
                    <h5 class="modal-title" id="commentModal">Comments</h5>
                    <button type="button" class="close" data-dismiss="modal">
                        <span>&times;</span>
                    </button>
                </div>
    
                <!-- MODAL BODY -->
                <div class="modal-body">

                    <!-- POST COMMENT FORM -->
                    <form method="POST" action="eventList/comment">
                        <!-- GRAB NAME FROM LOGIN INFO -->
                        <div class="form-group">
                            <label for="userName">Name: </label>
                            <input class="form-control" type="text" name="userName" value="<%= username %>" placeholder="<%= username %>" readonly>
                            <input type="hidden" name="eventId" value="<%= eventId %>">
                        </div>

                        <div class="form-group">
                            <label for="commentText">Comment</label>
                            <textarea class="form-control" name="commentText" id="commentText" rows="3"></textarea>
                        </div>

                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                    <!-- END POST COMMENT FORM -->
    
                    <!-- BEGIN COMMENT LIST -->
                    <h5>Comments List</h5>
                    <div class="container">
                        <div class="comments-list">

                        <ul class="list-unstyled">
                        <!-- BEGIN COMMENTS -->
                        <% for (var i in comments) { %>
                          <% if(comments[i].eventId == eventId){ %>
                            <li>
                              <h5 class="mt-1 mb-1"><%= comments[i].name %></h5>
                              <p><%= comments[i].body %></p>
                            </li>
                            <% } %>
                        <% } %>
                        </ul>
                        <!-- END COMMENTS -->

                    </div>
                </div>
            <!-- END COMMENT LIST -->
        </div>
    </div>
        </div>
    </div>
    <!-- END MODAL -->